<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="style_contact_top_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56.5dp</item>
        <item name="android:paddingLeft">@dimen/page_left_right_margin</item>
        <item name="android:paddingRight">@dimen/page_left_right_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
